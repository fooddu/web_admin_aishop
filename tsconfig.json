{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Bổ sung baseUrl để đảm bảo paths hoạt động
    "paths": {
      // ⭐️ FIX: Trỏ @/ vào thư mục src/ ⭐️
      "@/*": [
        "./src/*" 
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx", // Thêm .jsx cho các file JS/JSX
    "**/*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}